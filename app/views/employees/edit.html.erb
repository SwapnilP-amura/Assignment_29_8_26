<h1>Create New</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%=form_for([@employee.company,@employee]) do |f| %>

    <%= f.label :name %>           <!--label_for attribute :name!-->
    <%= f.text_field :name,placeholder:"Name" %>

    <%= f.label :email %>           <!--label_for attribute :name!-->
    <%= f.text_field :email,placeholder:"Email" %>

    <%= f.label :phone %>           <!--label_for attribute :name!-->
    <%= f.text_field :phone,placeholder:"Phone" %>

    <%= f.label :salary %>           <!--label_for attribute :name!-->
    <%= f.text_field :salary,placeholder:"Salary" %>

    <%= f.label :designation %>           <!--label_for attribute :name!-->
    <%= f.text_field :designation,placeholder:"Designation" %>



    <%= f.fields_for @employee.address do |t|%>
      <%= t.label :street %>           <!--label_for attribute :name!-->
      <%= t.text_field :street,placeholder:"Street" %>

      <%= t.label :city %>           <!--label_for attribute :name!-->
      <%= t.text_field :city,placeholder:"City" %>

      <%= t.label :pincode %>           <!--label_for attribute :name!-->
      <%= t.text_field :pincode,placeholder:"Pincode" %>

    <%end%>
    <%= f.submit "Create"%>

<%end%>
</div>
</div>
