<table style="border: 1px solid black;">
<tr>
  <th>ID</th>
  <th>Name</th>
  <th>Street</th>
  <th>City</th>
  <th>Pin</th>
</tr>
<% @companies.each do |company| %>
<tr>
  <td><%=company.id%></td>
  <td><%= company.name%></td>
  <td><%= company.address.street%></td>
  <td><%= company.address.city%></td>
  <td><%= company.address.pincode%></td>
</tr>
<% end %>
</table>
